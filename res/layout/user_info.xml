<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical" >

   

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" >

                <ImageView
                    android:id="@+id/img_user_info"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle" 
                    android:scaleType="centerInside"
    android:adjustViewBounds="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/img_user_info"
                    android:gravity="center"
                    android:weightSum="1.0" >

                    <Button
                        android:id="@+id/btn_capture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Capture" />

                    <Button
                        android:id="@+id/btn_browse_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Browse" />
                </LinearLayout>
            </RelativeLayout>

            <EditText
                android:id="@+id/edt_user_fname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="User first Name" />

            <EditText
                android:id="@+id/edt_user_lname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="User Last Name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_bd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Birth Day" />

                <LinearLayout
                    android:id="@+id/rl_bd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1.0" >

                    <TextView
                        android:id="@+id/tv_bd_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="right|center_vertical"
                        android:text="12/12/14" />

                    <ImageView
                        android:id="@+id/img_cal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="0.2"
                        android:src="@android:drawable/ic_menu_my_calendar" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_hieght"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Height" />

                <LinearLayout
                    android:id="@+id/rl_hieght"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1.0" >

                    <EditText
                        android:id="@+id/edt_height"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="0.8"
                        android:background="#00000000"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:text="168" />

                    <TextView
                        android:id="@+id/tv_height_unit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.2"
                        android:text="cms" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="weight" />

                <LinearLayout
                    android:id="@+id/rl_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1.0" >

                    <EditText
                        android:id="@+id/edt_weight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="#00000000"
                        android:gravity="right|center_vertical"
                        android:text="12" />

                    <TextView
                        android:id="@+id/tv_weight_unit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="kg" />
                </LinearLayout>
            </LinearLayout>
            

            <EditText
                android:id="@+id/edt_user_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="1234567890"
                android:inputType="phone" />

            <EditText
                android:id="@+id/edt_user_email_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="smith.abc@asdf.com"
                android:inputType="textEmailAddress" />

            <Spinner
                android:id="@+id/sp_type_diabities"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_save_user_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Save" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>